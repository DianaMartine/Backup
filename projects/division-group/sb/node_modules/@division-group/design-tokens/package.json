{
  "name": "@division-group/design-tokens",
  "displayName": "design-tokens",
  "version": "0.0.2",
  "description": "Lib for design tokens by diVision Group",
  "keywords": [
    "design-token",
    "division-group",
    "design",
    "tokens"
  ],
  "categories": [
    "Other"
  ],
  "author": {
    "name": "diVision Group",
    "email": "divisiontechgroup@gmail.com",
    "url": "https://github.com/division-group"
  },
  "maintainers": [
    {
      "name": "Diana Martine",
      "email": "diana_martine@outlook.com",
      "url": "https://github.com/dianamartine"
    }
  ],
  "readme": "README.md",
  "license": "MIT",
  "homepage": "https://github.com/division-group/design-tokens#readme",
  "bugs": {
    "url": "https://github.com/division-group/design-tokens/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/division-group/design-tokens.git"
  },
  "publisher": "diVisionGroup",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "index.js",
  "files": [
    "dist"
  ],
  "directories": {
    "lib": "src"
  },
  "dependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "style-dictionary": "^3.9.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "pre:commit": "npm run prettier && git add .",
    "build": "tsc && node src/build/index.js && npm run post:build",
    "post:build": "npm run prettier && rm -rf src/build",
    "build:dev": "rm -rf dist src/build && node src/index.js && npm run post:build",
    "release": "standard-version && npm run post:release",
    "post:release": "git add . && git commit -m 'chore: update package.json' && git push origin && git push origin --tags",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "clean": "rm -rf dist"
  }
}
